def tuplas ():
    Tcolor= ('rojo','azul','verde','amarillo'
             ,'marron','lila','negro','rosa','blanco','naranja')
    Tnumeros = (10,1,5,11)
    Tresu= Tnumeros[0]+Tnumeros[2]+Tnumeros[3]-Tnumeros[1]
    Lcolors=['rojo','azul','verde','amarillo'
             ,'marron','lila','negro','rosa','blanco','naranja']
                        #***practica tuplas con numerso y palabras
    print('\n\t\t\t***practicas de Tuplas***')
    print(f'\n\t\tTupla de colores para ejecicio es :\n{Tcolor}')
    print(f'El color de la segunda pocicion de la tupla es:\n{Tcolor[1]}')
    print(f'Los valores de la tupla para que hacer la opreacion con resultado 25 es:\n{Tnumeros}={Tresu} ')
                        #***practica de cambio de tipo lista a tuplas***
    print(f'Antes del cambio de tipo \n{Lcolors}:\t[{type(Lcolors)}]')
    T_color = tuple(Lcolors)
    print(f'Ddespues del cambio de listas\n{T_color}:\t{type(T_color)} ')
