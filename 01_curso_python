  #              tema diccionarios 
def diccionario (): 
                #ejercicio  imprimir  cierto contenido del diccionario 
    print('\n\t\t***Practicas de diccionarios*** ')
    teclado_2 = {'categoria' : 'teclados',
                 'modelo' : 'corsair K55 RGB',
                 'precio':'59.99'}
    Eje = teclado_2 ['modelo']
    eje_2 =teclado_2['precio']
    print(f'el modelo es :{Eje}, y el precio es {eje_2}')
                  # ejercicio diccionarios con for 
    print('\n\t\tEjercicio Diccionarios con For:\n')
    teclado_1 = {'categoria': 'Teclado','modelo':'Hyperx Alloy FPS Pro'
                 ,'precio':'$89.99'}
    for x in teclado_1:
        print(f'{x} = {teclado_1[x]}.\n')
    # tema metodos  en diccionarios 
    print('\t\t***Ejercicio Eliminacion de elementos de un diccionario***\n')
    del teclado_1
    del teclado_2['categoria']
    del teclado_2['precio']
    print(teclado_2)
def funcion():
    print('\n\t\t**** temas funciones****')
    def suma(numero_1, numero_2):
        print(f'\n\t\t***Ejercicio de suma con fuinciones***')
        print(numero_1+numero_2)
    suma(15,15)
    suma(25,25)
    suma(56999,1)



        #main del programa
Exit= False
while not Exit:    
    print('\nmenu: \n1.-temas del 2-9 \n2.-temas listas : \n3.-Temas Tuplas:\n4.-Tema condicionales\n5.-Temas Bucles\n6.-Tema Diccionarios\n7.-salida')
    menu = int(input('seccione una opcion :'))
    if menu == 1:
        print('\n\t***temas string y operadores**\n')
        string ()
    elif menu == 2:
        print('\n\t***temas listas *** \n')
        listas()
    elif menu ==3:
        print('\n\t***Tema tuplas**')
        tuplas()
    elif menu ==4:
        print('\n***Tema condicionales***\n')
        condicionales()
    elif menu ==5:
        print('\n***Tema Bucles***\n')
        bucles()
    elif menu ==6:
        print('\n***tema Diccionarios***')
        diccionario()
    elif menu ==7:
        print('\n***tema funciones')
        funcion()

    elif  menu == 8:
        
        print ('gracias por utilisar este programa')
        Exit= True
