                    #**** practicas de while incremento y decremento  de
def bucles(): 
    print('practica while incremento de 5 a 5') 
    num = 5
    while num < 20:
        print(num)
        num+=5 
        #### esta parte muestra el decremento en numeros degativo de 20 en 20
    print('practica decrimento de 100 a 20 ')    
    num_1 = 0
    while num_1> -101:
        print(num_1)
        num_1-=20
        #reduccion de 10 a 0 con while 
    print('practica while de 10 a 0 ')
    num_0 = 10
    while num_0 > -1:
        print(f'el valor es {num_0}')
        num_0 -=1
        #practica de while con if para saltar nunmeros del bucle y detener 
        #el bucle a un nemero espesifico antes de contemplar la cantidad de veses deciadas
    print('practica de incremento 1 a 30 con break\n')
    x=0
    while x<=30:
        x+=1
        if x==4 or x== 6 or x==10:
             print(f'SE SALTA ESTOS NUMEROS: {x}')
             continue
        if x ==15:
              print(f'el bucle se acaba en el {x}')
              break
        print(x)
#/////////////////////////////////////////////////////////////////
        #**** practica bucle FOR****
        #generar el listado con el bucle for de la tupla 
    colores = 'rojo','azul','verde','amarillo'
    print('\n\t\tPractica de bucle for \n')
    for x in colores:
        print(f'EL color es {x}') 
    #ejercicios de uncrementar un valor mediante rang con for 
    print('\n\t\tpractica incremento con bucle for')
    for nu in range(7,800,100):
        print(f'los nimeror de incremento son: \n')
        print(nu)

